<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/form.css">
</head>
<body>
    <main class="container">
        <h1 class="header-page-title">Inventory Management</h1>
        <% if(locals.errors && errors.length) {%>
            <div class="alert alert-error">
                <strong>Fix the following:</strong>
                <ul>
                    <% errors.forEach(e => {%>
                        <li><%= e.msg %></li><%})%>
                </ul>
            </div>
        <% } %>

        <section class="form-card">
            <h2 class="form-title">Create Category</h2>

            <form action="<%= action %>" method="POST" novalidate>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="name">Name <span class="req">*</span></label>
                        <input 
                          type="text"
                          required
                          name="name"
                          id="name"
                          class="input"
                          value="<%= typeof body!== 'undefined' ? body.name : '' %>"
                          placeholder="e.g., Guitars"
                          />
                        <% if(locals.errorsMap && locals.errorsMap.name) {%>
                            <div class="field-error"><%= errorsMap.name.msg %></div>
                        <% } %>
                    </div>

                    <div class="form-group full">
                        <label for="description">Description</label>
                        <textarea 
                          name="description"
                          id="description"
                          class="textarea"
                          rows="4"
                          placeholder="Short description"
                          ><%= typeof body!== 'undefined' ? body.description : '' %></textarea>
                        <% if(locals.errorsMap && locals.errorsMap.description) {%>
                        <div class="field-error"><%= errorsMap.description.msg %></div>
                        <% } %>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn">Submit</button>
                    <a href="/" class="btn secondary">Cancel</a>
                </div>
            </form>
        </section>
    </main>
</body>
</html>